{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "my",
  "version": "0.1.0",
  "identifier": "com.my.app",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Calculator",
        "width": 800,
        "height": 700,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' blob: data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/new.ico"
    ]
  },
  "plugins": {
    "allowlist": {
      "window": {
        "all": true,
        "close": true,
        "minimize": true,
        "maximize": true,
        "unmaximize": true,
        "isMaximized": true,
        "listen": true
      },
      "dialog": {
        "open": true
      },
      "fs": {
        "scope": ["$VIDEO/*"]
      }
    }
  }
}